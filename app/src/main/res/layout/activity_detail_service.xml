<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daftar_Service.DetailServiceActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detailservice_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detailservice_toolbar"
            android:layout_width="match_parent"
            app:theme="@style/Widget.AppCompat.ActionBar.TabBar"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/detailservice_judul"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Service"
                    android:textColor="#000"
                    android:fontFamily="@font/sfbold"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detailservice_appbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailservice_tv_tipeservice"
            android:text="Tipe Service"
            android:fontFamily="@font/sfbold"
            android:textSize="18dp"/>

        <EditText
            android:layout_below="@id/detailservice_tv_tipeservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailservice_tipeservice"
            />

        <TextView
            android:layout_below="@id/detailservice_tipeservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailservice_tv_tipekendaraan"
            android:text="Tipe Kendaraan"
            android:fontFamily="@font/sfbold"
            android:textSize="18dp"/>

        <EditText
            android:layout_below="@id/detailservice_tv_tipekendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailservice_tipekendaraan"
            />

        <TextView
            android:layout_below="@id/detailservice_tipekendaraan"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailservice_tv_harga"
            android:text="Harga"
            android:fontFamily="@font/sfbold"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailservice_harga"
            android:layout_below="@id/detailservice_tv_harga"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailservice_button"
                android:text="Update"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_hijau"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/detailservice_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailservice_button"
                android:layout_gravity="center_horizontal"
                android:text="Delete"
                android:fontFamily="@font/sfbold"
                android:textColor="#000"
                android:layout_marginBottom="6dp"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>